<UserControl
  x:Class="DirN.Views.PointerControl.PBool"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:DirN.Views.PointerControl"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:pointercontrol="clr-namespace:DirN.ViewModels.PointerControl"
  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
  d:DataContext="{d:DesignInstance Type=pointercontrol:PBoolViewModel}"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Grid>
    <ToggleButton Content="{ui:SymbolIcon Symbol=Checkmark24}" IsChecked="{Binding IsChecked, UpdateSourceTrigger=PropertyChanged}" />
  </Grid>
</UserControl>
