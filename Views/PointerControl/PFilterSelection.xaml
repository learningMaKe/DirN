<UserControl
  x:Class="DirN.Views.PointerControl.PFilterSelection"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:DirN.Views.PointerControl"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:pointercontrol="clr-namespace:DirN.ViewModels.PointerControl"
  d:DataContext="{d:DesignInstance Type=pointercontrol:PFilterSelectionViewModel}"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Grid>
    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
      <TextBlock
        Margin="6,6"
        VerticalAlignment="Center"
        Text="筛选:" />
      <ComboBox
        Padding="2"
        ItemsSource="{Binding FilterMethods}"
        SelectedItem="{Binding SelectedFilter, UpdateSourceTrigger=PropertyChanged}" />
    </StackPanel>
  </Grid>
</UserControl>
